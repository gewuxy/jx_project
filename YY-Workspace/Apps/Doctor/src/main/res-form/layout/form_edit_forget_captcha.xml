<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        style="@style/v.form"
        android:background="@drawable/white"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <EditText
            android:id="@+id/form_et"
            style="@style/et.common"
            android:layout_weight="1"
            android:inputType="number"
            android:textColorHint="@color/text_888"
            android:textSize="15dp"/>

        <ImageView
            style="@style/iv.form.clean.right"/>

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:background="@color/divider"/>

        <lib.ys.view.CaptchaView
            android:id="@+id/form_tv_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/get_captcha"
            android:textColor="@color/text_888"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        style="@style/divider"
        android:layout_width="280dp"/>

</LinearLayout>