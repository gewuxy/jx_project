<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_me_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/item_selector"
        android:gravity="center_vertical">

        <lib.ys.network.image.NetworkImageView
            android:id="@+id/me_header_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="@dimen/margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="@dimen/margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/me_header_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_333"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/me_header_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/text_666"/>

            </LinearLayout>

            <TextView
                android:id="@+id/me_header_tv_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_666"
                android:textSize="12dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="27dp"
            android:layout_height="27dp">

            <yy.doctor.view.CircleProgressView
                android:id="@+id/me_header_progress"
                view:circle_widthDp="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/me_header_tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="8dp"
                android:textColor="@color/text_0882e7"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/margin_large"
            android:src="@drawable/form_ic_arrow_right"/>

    </LinearLayout>

</LinearLayout>