<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:orientation="vertical">

            <include layout="@layout/layout_meeting_detail_player"/>

            <include layout="@layout/layout_meeting_detail_describe1"/>

            <View style="@style/divider.main"/>

            <include layout="@layout/layout_meeting_detail_describe2"/>

            <View
                style="@style/divider.main"
                android:layout_height="@dimen/margin"
                android:background="#f0f0f0"/>

            <!-- 资料 -->
            <LinearLayout
                android:id="@+id/meeting_detail_layout_data"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="查看资料"
                    android:textColor="@color/text_888"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/meeting_detail_tv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_888"
                    android:textSize="10dp"/>

                <ImageView
                    android:id="@+id/meeting_detail_iv_data"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:src="@drawable/unit_num_detail_ic_arrow"
                    android:visibility="gone"/>

            </LinearLayout>

            <View
                android:id="@+id/meeting_detail_divider"
                style="@style/divider"/>

            <LinearLayout
                android:id="@+id/meeting_detail_layout_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View style="@style/divider"/>

            <View
                android:id="@+id/meeting_detail_view_divider"
                style="@style/divider.main"
                android:layout_height="@dimen/margin"
                android:background="#f0f0f0"/>

            <!-- 主讲者信息 -->
            <TextView
                style="@style/tv.meeting"
                android:paddingBottom="14dp"
                android:paddingLeft="@dimen/margin"
                android:paddingTop="14dp"
                android:text="@string/meeting_intro"/>

            <include layout="@layout/layout_meeting_detail_describe3"/>

            <TextView
                android:id="@+id/meeting_detail_tv_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="14dp"
                android:lineSpacingExtra="14dp"
                android:text="个人简介：担任某咖啡茶品配送服务部的市场部业务员。主要负责与经销商签定经销合同、办理产品的包装、运输、保险、货款结算、售后产品跟踪、市场反馈以及开拓新的销售渠道等。负责公司新业务员的培训，在实际工作中具体指导和协调业务员的销售工作，并多次受到公司的表扬"
                android:textColor="@color/text_333"
                android:textSize="14dp"/>

        </LinearLayout>
    </ScrollView>
    <!-- 底部按钮 -->
    <yy.doctor.view.meet.ModuleLayout
        android:id="@+id/meeting_detail_modules"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"/>
</RelativeLayout>