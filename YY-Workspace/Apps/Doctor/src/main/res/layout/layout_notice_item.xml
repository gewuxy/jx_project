<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/notice_item_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:lineSpacingExtra="6dp"
            android:text="血管病的研究电话地方干部大范甘迪电饭锅都发割发代首电饭锅地方地方"
            android:textColor="@color/text_333"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notice_item_tv_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notice_item_iv_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@mipmap/notice_ic_dot"/>

            <TextView
                android:id="@+id/notice_item_tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YaYa专家讲堂"
                android:textColor="@color/text_888"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/notice_item_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="2017-04-16 12:50"
                android:textColor="@color/text_888"
                android:textSize="10dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/notice_item_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right"/>

    </RelativeLayout>

</LinearLayout>
