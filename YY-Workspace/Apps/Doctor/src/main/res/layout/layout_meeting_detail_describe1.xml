<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin">

    <TextView
        android:id="@+id/meeting_detail_tv_title"
        style="@style/tv"
        android:layout_marginTop="16dp"
        android:text="河北省第29届神经病报告"
        android:textColor="@color/text_0882e7"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meeting_detail_tv_section"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:background="@drawable/text_bg_section"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="神经科"
            android:textColor="@color/text_fff"
            android:textSize="8dp"/>

        <TextView
            android:id="@+id/meeting_detail_tv_meet_type"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_bg_meet_type"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="内科"
            android:textColor="@color/text_fff"
            android:textSize="8dp"/>

        <ImageView
            android:id="@+id/meeting_detail_iv_cmd"
            android:layout_width="22dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/meeting_detail_ic_cme"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/meeting_detail_iv_epn"
            android:layout_width="29dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/meeting_detail_selector_epn_type"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/meeting_detail_tv_epn"
        style="@style/tv.meeting"
        android:layout_marginTop="6dp"
        android:text="@string/meeting_epn_award_before"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/meeting_detail_tv_cmd"
        style="@style/tv.meeting"
        android:layout_marginTop="6dp"
        android:text="@string/meeting_cme_award_before"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"/>
</LinearLayout>