<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/launch_download_data_ic"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="42dp"/>

    <TextView
        android:id="@+id/launch_download_data_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="14dp"
        android:textColor="@color/text_333"/>

    <TextView
        android:id="@+id/launch_download_data_tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="14dp"
        android:textColor="@color/text_888"/>

    <TextView
        android:id="@+id/open_download_data_tv_btn"
        style="@style/tv.common"
        android:layout_marginTop="32dp"
        android:text="@string/open_data"/>

</LinearLayout>
