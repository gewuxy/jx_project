<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 借位,实际没用 -->
    <TextView
        android:id="@+id/meet_play_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:includeFontPadding="false"
        android:text="/"
        android:textSize="15dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/meet_play_tv_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@id/meet_play_mid"
        android:includeFontPadding="false"
        android:text="0"
        android:textColor="@color/text_333"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/meet_play_tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/meet_play_mid"
        android:includeFontPadding="false"
        android:text="0"
        android:textColor="@color/text_b3"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meet_play_iv_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="66dp"
            android:background="@drawable/btn_selector_oval"
            android:paddingBottom="10dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="10dp"
            android:src="@drawable/meet_play_ic_left_p"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:includeFontPadding="false"
            android:text="/"
            android:textColor="@color/text_b3"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/meet_play_iv_right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="66dp"
            android:background="@drawable/btn_selector_oval"
            android:paddingBottom="10dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="10dp"
            android:src="@drawable/meet_play_ic_right_p"/>
    </LinearLayout>
</RelativeLayout>