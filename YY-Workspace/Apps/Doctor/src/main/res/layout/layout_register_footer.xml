<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/register_layout_captcha"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <EditText
            android:id="@+id/register_et_captcha"
            style="@style/et.common"
            android:layout_height="50dp"
            android:hint="输入YaYa医师注册激活码"
            android:imeActionLabel="@string/register"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/text_333"
            android:textColorHint="@color/text_888"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/iv_activated_cancel"
            style="@style/iv.form.clean.right"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/split"/>

        <View
            android:id="@+id/split"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/register_tv_activated_code"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/register_tv_activated_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:clickable="true"
            android:text="获取激活码"
            android:textColor="@color/text_0882e7"
            android:textSize="15dp"/>

    </RelativeLayout>

    <View
        style="@style/divider.form"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register"
            style="@style/tv.common"
            android:layout_width="match_parent"
            android:layout_marginTop="52dp"
            android:background="@drawable/btn_selector_blue"
            android:text="注册"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/register_tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:text="点击“注册”即表示您同意"
            android:textColor="@color/text_b3"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/help_and_feedback_footer_tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="8dp"
            android:text="《敬信科技YaYa医师服务协议》"
            android:textColor="@color/text_0882e7"
            android:textSize="10dp"/>
    </LinearLayout>


</LinearLayout>