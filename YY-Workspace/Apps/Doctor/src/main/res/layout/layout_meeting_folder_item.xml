<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meeting_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/item_selector"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meeting_item_iv_state"
                android:src="@mipmap/meeting_ic_folder_unit_num"
                android:layout_width="11dp"
                android:layout_height="11dp"/>

            <TextView
                android:id="@+id/meeting_item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="测试会议文件夹"
                android:textColor="@color/text_333"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/meeting_item_tv_unit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="测试单位号"
                android:layout_marginRight="6dp"
                android:textColor="@color/text_888"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/meeting_item_tv_meeting_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:drawableRight="@mipmap/home_ic_meeting_folder_arrow"
                android:drawablePadding="4dp"
                android:singleLine="true"
                android:text="48个会议"
                android:textColor="@color/text_0882e7"
                android:textSize="13dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="16dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/form_ic_arrow_right"/>

</LinearLayout>
