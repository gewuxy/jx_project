<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pcd_header_layout_location"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的位置是："
            android:textColor="@color/text_888"
            android:textSize="12dp"/>

        <lib.ys.view.ProgressView
            android:id="@+id/pcd_header_iv_progress"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/pcd_ic_loading"/>

        <TextView
            android:id="@+id/pcd_header_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="定位中..."
            android:textColor="@color/text_888"
            android:textSize="12dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="全部"
        android:textColor="@color/text_888"
        android:textSize="12dp"/>

</LinearLayout>
