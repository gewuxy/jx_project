<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/profile_layout_header_integrity"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/profile_pb_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressDrawable="@drawable/pb_perfection"
            android:visibility="visible"
            android:max="100"
            android:progress="0"/>

        <TextView
            android:id="@+id/profile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="您的个人资料完整度 : "
            android:textSize="11dp"
            android:textColor="@color/text_2392a2"/>

        <TextView
            android:id="@+id/profile_tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_tv"
            android:layout_centerInParent="true"
            android:textSize="11dp"
            android:textColor="@color/text_2392a2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_profile_header"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@drawable/item_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:text="@string/avatar"
            android:textColor="@color/text_666"
            android:textSize="14dp"/>

        <lib.ys.network.image.NetworkImageView
            android:id="@+id/profile_header_iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="38dp"/>

        <ImageView
            style="@style/iv.arrow.align_right"/>
    </RelativeLayout>

</LinearLayout>