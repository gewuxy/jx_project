<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meeting_module_bg">

    <!-- 竖屏布局 -->
    <LinearLayout
        android:id="@+id/meeting_ppt_layout_p"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:background="@color/transparent"/>

        <!-- 播放按钮/左右切换 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meeting_ppt_iv_left"
                android:layout_width="36dp"
                android:layout_height="43dp"
                android:layout_marginRight="50dp"
                android:padding="10dp"
                android:src="@drawable/meeting_ppt_ic_left_selector"/>

            <RelativeLayout
                android:id="@+id/meeting_ppt_layout_control"
                android:layout_width="80dp"
                android:layout_height="80dp">

                <yy.doctor.view.CircleProgressView
                    android:id="@+id/meeting_ppt_layout_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    view:circle_backProgress="@color/transparent"
                    view:circle_progress="@color/white"
                    view:circle_widthDp="3dp"/>

                <ImageView
                    android:id="@+id/meeting_ppt_iv_control_p"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/meeting_ppt_control_selector"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/meeting_ppt_iv_right"
                android:layout_width="36dp"
                android:layout_height="43dp"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:src="@drawable/meeting_ppt_ic_right_selector"/>

        </LinearLayout>

        <TextView
            android:id="@+id/meeting_ppt_tv_time_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="加载中"
            android:textColor="@color/text_99fff"
            android:textSize="14dp"/>

        <!-- 底部的功能键 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meeting_ppt_iv_first"
                android:layout_width="45dp"
                android:layout_height="41dp"
                android:layout_marginBottom="18dp"
                android:padding="10dp"
                android:src="@mipmap/meeting_ppt_ic_first"/>

            <ImageView
                android:id="@+id/meeting_ppt_iv_comment"
                android:layout_width="45dp"
                android:layout_height="41dp"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="24dp"
                android:padding="10dp"
                android:src="@mipmap/nav_bar_ic_comment"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/meeting_ppt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/meeting_ppt_view"
            style="@style/v"
            android:layout_height="44dp"/>

        <lib.ys.view.photoViewer.MultiTouchViewPager
            android:layout_below="@id/meeting_ppt_view"
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>
        <!-- 横屏布局 -->
        <LinearLayout
            android:id="@+id/meeting_ppt_layout_l"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/vp"
            android:background="#33000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/meeting_ppt_iv_control_l"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_marginLeft="12dp"
                android:padding="10dp"
                android:src="@drawable/meet_play_stop_selector"/>

            <TextView
                android:id="@+id/meeting_ppt_tv_time_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="00:00"
                android:textColor="#99ffffff"
                android:textSize="14dp"/>

            <SeekBar
                android:id="@+id/meeting_ppt_sb_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="22dp"
                android:layout_weight="1"
                android:max="100"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:progressDrawable="@drawable/meeting_ppt_seekbar_progress"
                android:thumb="@mipmap/meeting_ppt_ic_progress"
                android:thumbOffset="0dp"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>

