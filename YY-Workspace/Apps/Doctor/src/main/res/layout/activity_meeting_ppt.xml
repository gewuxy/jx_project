<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 竖屏布局 -->
    <RelativeLayout
        android:id="@+id/meet_ppt_layout_p"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/meet_ppt_frag_rep_p"
            android:name="yy.doctor.ui.frag.meeting.PPTRepFrag"
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:layout_weight="0"/>

        <yy.doctor.view.discretescrollview.DiscreteScrollView
            android:id="@+id/meet_ppt_rv_p"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@id/meet_ppt_frag_rep_p"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/meet_ppt_rv_p">

            <TextView
                android:id="@+id/meet_play_tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/meet_play_mid"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="@color/text_333"
                android:textSize="15dp"/>

            <!-- 借位,实际没用 -->
            <TextView
                android:id="@id/meet_play_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:visibility="invisible"
                android:text="/"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/meet_play_tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/meet_play_mid"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="@color/text_b3"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/meet_play_iv_left_p"
                    android:layout_width="19dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="66dp"
                    android:padding="5dp"
                    android:src="@drawable/meet_play_ic_left_p"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:includeFontPadding="false"
                    android:text="/"
                    android:textColor="@color/text_b3"
                    android:textSize="15dp"/>

                <ImageView
                    android:id="@+id/meet_play_iv_right_p"
                    android:layout_width="19dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="66dp"
                    android:padding="5dp"
                    android:src="@drawable/meet_play_ic_right_p"/>

            </LinearLayout>

        </RelativeLayout>

        <include layout="@layout/layout_meet_play_bottom_nav"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/meet_ppt_layout_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <fragment
            android:id="@+id/meet_ppt_frag_rep_l"
            android:name="yy.doctor.ui.frag.meeting.PPTRepFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"/>

        <ImageView
            android:id="@+id/meet_play_iv_left_l"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:src="@drawable/meet_play_ic_left_l"/>

        <ImageView
            android:id="@+id/meet_play_iv_right_l"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:src="@drawable/meet_play_ic_right_l"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#80000000"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/meet_ppt_rv_l"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

