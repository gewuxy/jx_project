<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 竖屏布局 -->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/meet_ppt_layout_p"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/meet_ppt_frag_rep_p"
            android:name="yy.doctor.ui.frag.meeting.PPTRepFrag"
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:layout_weight="0"/>

        <fragment
            android:id="@+id/meet_ppt_frag_breviary"
            android:name="yy.doctor.ui.frag.meeting.PPTBreviaryFrag"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@id/meet_ppt_frag_rep_p"
            android:layout_weight="0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/meet_ppt_frag_breviary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meet_play_tv_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@color/text_333"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/meet_play_tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@color/text_b3"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/meet_play_iv_left"
                    android:layout_width="19dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="66dp"
                    android:padding="5dp"
                    android:src="@drawable/meet_play_ic_left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:includeFontPadding="false"
                    android:text="/"
                    android:textColor="@color/text_b3"
                    android:textSize="15dp"/>

                <ImageView
                    android:id="@+id/meet_play_iv_right"
                    android:layout_width="19dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="66dp"
                    android:padding="5dp"
                    android:src="@drawable/meet_play_ic_right"/>

            </LinearLayout>

        </RelativeLayout>

        <include layout="@layout/layout_meet_play_bottom_nav"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/meet_ppt_layout_l"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/meet_ppt_frag_rep_l"
            android:name="yy.doctor.ui.frag.meeting.PPTRepFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"/>
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/meet_ppt_rv"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>

    </RelativeLayout>

</RelativeLayout>

