<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/data_item_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp">

        <View
            android:id="@+id/data_item_divider"
            style="@style/divider"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/data_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AndroidTestItem"
                android:textColor="@color/text_333"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/data_item_tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1252K"
                android:textColor="@color/text_888"
                android:textSize="12dp"/>

        </LinearLayout>


        <ImageView
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:src="@mipmap/form_ic_arrow_right"/>

    </RelativeLayout>

</LinearLayout>
