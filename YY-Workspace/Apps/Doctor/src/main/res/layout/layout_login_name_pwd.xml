<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <yy.doctor.view.AutoCompleteEditText
            android:id="@+id/login_et_name"
            style="@style/et.login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入邮箱或手机号"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/login_iv_cancel"
            android:visibility="visible"
            style="@style/iv.form.clean.right"/>

    </LinearLayout>

    <View
        style="@style/divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <EditText
            android:id="@+id/login_et_pwd"
            style="@style/et.login"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="请输入密码"
            android:maxLength="18"
            android:singleLine="true"/>

        <CheckBox
            android:id="@+id/login_cb_visible_pwd"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:button="@drawable/login_checkbox_visible_selector"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/login_iv_cancel_pwd"
            style="@style/iv.form.clean.right"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/login_cb_visible_pwd"/>

    </RelativeLayout>

    <View
        style="@style/divider"/>

    <TextView
        android:id="@+id/login_tv_login"
        style="@style/tv.common"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_selector_blue"
        android:text="@string/login"
        android:textColor="@color/text_fff"
        android:textSize="15dp"/>
</LinearLayout>