<resources>

    <!-- 普通按钮样式 -->
    <style name="tv.common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_height_common</item>
        <item name="android:background">@drawable/btn_selector_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <!-- 普通输入框样式 -->
    <style name="et.common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:background">@drawable/white</item>
        <item name="android:textColor">@color/text_666</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/text_b3</item>
    </style>

    <style name="et.login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_666</item>
        <item name="android:textColorHint">@color/text_b3</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="tv.dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_01b557</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- meeting -->
    <style name="tv.meeting">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/text_888</item>
    </style>

    <!-- meeting -->
    <style name="tv.meeting.title">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/text_333</item>
    </style>

    <!-- meeting 右上角的时间 -->
    <style name="tv.meeting.player">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="v.meeting"/>
    <!-- meeting 底部的分割线 -->
    <style name="v.meeting.divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@drawable/divider</item>
    </style>

    <style name="iv.meeting">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">16dp</item>
    </style>

    <style name="iv.meeting.record"/>

    <style name="iv.meeting.record.symbol">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:src">@mipmap/meeting_record_ic_symbol</item>
    </style>

    <style name="tv.exam.end">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/text_888</item>
    </style>

    <style name="divider.meeting">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="divider.meeting.bottom">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="divider.record">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="tv.exam">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 资料部分 -->
    <style name="v.data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/margin</item>
    </style>

    <style name="iv.data">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:src">@mipmap/unit_num_detail_ic_file</item>
    </style>

    <style name="tv.data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:textColor">@color/text_333</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="v.meeting.module">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tv.login"/>

    <style name="tv.login.bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/text_848a8d</item>
        <item name="android:textSize">13dp</item>
    </style>

    <!-- 首页会议文件夹 -->
    <style name="v.home"/>

    <style name="v.home.folder">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/sign_radius_bg</item>
    </style>

    <style name="v.home.speaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="tv.home"/>

    <style name="tv.home.meet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/text_888</item>
    </style>

    <style name="tv.home.speaker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv.home.speaker.title">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">9dp</item>
    </style>

</resources>
