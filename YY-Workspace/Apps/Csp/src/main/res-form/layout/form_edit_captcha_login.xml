<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        style="@style/v.form"
        android:layout_marginRight="@dimen/margin"
        android:background="@color/transparent">

        <lib.ys.network.image.NetworkImageView
            style="@style/iv.login"
            android:layout_marginLeft="@dimen/margin"/>

        <EditText
            android:id="@+id/form_et"
            style="@style/et.common"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"/>

        <ImageView style="@style/iv.form.clean"/>

        <lib.ys.view.CaptchaView
            android:id="@+id/form_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:gravity="center|right"
            android:text="@string/get_captcha"
            android:textColor="@color/text_af"
            android:textSize="15dp"/>

    </LinearLayout>

</LinearLayout>