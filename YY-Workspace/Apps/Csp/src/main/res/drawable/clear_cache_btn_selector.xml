<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="0"
                android:startColor="@color/btn_bg_green_disabled"
                android:endColor="@color/btn_bg_green_disabled2"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_bg_green_focus"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <gradient
                android:angle="0"
                android:startColor="@color/btn_bg_green_left"
                android:centerColor="@color/btn_bg_green_mid"
                android:endColor="@color/btn_bg_green_right"/>
            <corners android:radius="33dp"/>
        </shape>
    </item>

</selector>
