<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/btn_bg_black_disabled2"
                android:startColor="@color/btn_bg_black_disabled"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_bg_black_focus"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/btn_bg_black_mid"
                android:endColor="@color/btn_bg_black_above"
                android:startColor="@color/btn_bg_black_below"/>
        </shape>
    </item>

</selector>
