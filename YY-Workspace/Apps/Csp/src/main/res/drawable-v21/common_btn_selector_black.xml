<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 通用 -->
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/btn_bg_black_disabled2"
                android:startColor="@color/btn_bg_black_disabled"/>
            <corners android:radius="33dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <ripple android:color="@color/btn_bg_black_focus">
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="@color/btn_bg_black_above"
                        android:centerColor="@color/btn_bg_black_mid"
                        android:startColor="@color/btn_bg_black_below"/>
                    <corners android:radius="33dp"/>
                </shape>
            </item>
        </ripple>
    </item>

</selector>