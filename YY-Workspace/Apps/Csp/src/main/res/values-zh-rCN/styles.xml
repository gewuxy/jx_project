<resources>

    <style name="v.login"/>

    <style name="v.login.foot">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="v.login.btn">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/login_btn_selector_type_common</item>
    </style>

    <!-- 普通输入框样式 -->
    <style name="et.common">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:background">@drawable/white</item>
        <item name="android:textColor">@color/text_333</item>
        <item name="android:textSize">@dimen/margin</item>
        <item name="android:textColorHint">@color/text_af</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 普通按钮样式 -->
    <style name="tv.common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_height_common</item>
        <item name="android:background">@drawable/common_btn_selector_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/form_margin_left</item>
        <item name="android:layout_marginRight">@dimen/form_margin_right</item>
    </style>

    <style name="tv.login"/>

    <style name="tv.login.bottom">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#FF888888</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="tv.agree"/>

    <style name="tv.agree.protocol">
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/have_agree_to</item>
        <item name="android:textColor">@color/text_333</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="tv.dialog"/>

    <style name="tv.dialog.share">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_333</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/item_selector</item>
    </style>

    <style name="tv.live"/>

    <style name="tv.live.video"/>

    <style name="tv.live.video.online">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="tv.live.video.start">
        <item name="android:textSize">10dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="iv.bg"/>

    <style name="iv.bg.login">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:src">@drawable/login_hui_logo</item>
    </style>

    <style name="iv.common">
        <item name="android:id">@id/form_iv</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="iv.flow">
        <item name="android:layout_width">69dp</item>
        <item name="android:height">40dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">9dp</item>
        <!--<item name="app:layout_columnWeight">1</item>--> <!--不支持-->
    </style>
</resources>
