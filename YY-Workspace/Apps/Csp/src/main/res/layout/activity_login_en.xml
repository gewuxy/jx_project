<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp">

        <com.pili.pldroid.player.widget.PLVideoTextureView
            android:id="@+id/login_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/video_3b3a34_eighty">

            <TextView
                android:id="@+id/language_transform_en"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_third_part_login_cn"
                android:gravity="center"
                android:text="@string/language_transform_en"
                android:textColor="@color/white"
                android:textSize="10dp"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/login_csp_logo"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/login_facebook"
        android:layout_width="284dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/login_btn_selector_type_facebook"
        android:gravity="center"
        android:text="@string/Login_with_Facebook"
        android:textColor="@color/white"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/login_twitter"
        android:layout_width="284dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/login_btn_selector_type_twitter"
        android:gravity="center"
        android:text="@string/Login_with_Twitter"
        android:textColor="@color/white"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="55dp">

        <include layout="@layout/layout_login_part_type"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_mail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/login_ic_mail"/>

        <ImageView
            android:id="@+id/login_jx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/third_party_login_jx"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By tapping “Login” you are agreeing to the"
            android:textColor="@color/text_7a8b9f"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/login_en_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/protocol"
            android:textColor="@color/text_167afe"
            android:textSize="10dp"/>
    </LinearLayout>

</LinearLayout>