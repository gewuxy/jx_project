<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text="@string/flow_rate_surplus"
            android:textColor="@color/text_888"/>

        <TextView
            android:id="@+id/flow_rate_tv_surplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="0G"
            android:textColor="@color/text_333"
            android:textSize="32dp"/>

        <include
            android:id="@+id/flow_rate_layout_cny_price"
            layout="@layout/layout_flow_rate_cny_price"
            android:visibility="visible"/>

        <include
            android:id="@+id/flow_rate_layout_usd_price"
            layout="@layout/layout_flow_rate_usd_price"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付币种"
            android:textColor="@color/text_888"
            android:textSize="14dp"/>

        <LinearLayout
            android:id="@+id/flow_rate_cny_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/flow_rate_selector_currency"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="人民币"
                android:textColor="@drawable/flow_rate_selector_type_currency"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_rate_usd_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/flow_rate_selector_currency"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="美元"
                android:textColor="@drawable/flow_rate_selector_type_currency"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_888"
        android:text="支付方式"/>

    <include
        android:id="@+id/flow_rate_layout_cny_payment"
        layout="@layout/layout_flow_rate_cny_payment"/>

    <include
        android:visibility="gone"
        android:id="@+id/flow_rate_layout_usd_payment"
        layout="@layout/layout_flow_rate_usd_payment"/>

    <TextView
        android:id="@+id/flow_rate_tv_pay"
        style="@style/tv.common"
        android:layout_marginTop="42dp"
        android:enabled="true"
        android:text="@string/flow_rate_pay"/>

</LinearLayout>