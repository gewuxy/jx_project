<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.GridLayout
        android:layout_marginTop="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2">

        <LinearLayout
            android:id="@+id/flow_rate_layout_price_usd_five"
            android:layout_width="158dp"
            android:layout_height="66dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/flow_rate_selector_price"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5G"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售价"
                    android:textColor="@color/text_888"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.75"
                    android:textColor="@color/text_167afe"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美元"
                    android:textColor="@color/text_888"
                    android:textSize="14dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_rate_layout_price_usd_twenty_five"
            android:layout_width="158dp"
            android:layout_height="66dp"
            android:background="@drawable/flow_rate_selector_price"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25G"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售价"
                    android:textColor="@color/text_888"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.75"
                    android:textColor="@color/text_167afe"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美元"
                    android:textColor="@color/text_888"
                    android:textSize="14dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_rate_layout_price_usd_one_hundred"
            android:layout_width="158dp"
            android:layout_height="66dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/flow_rate_selector_price"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100G"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售价"
                    android:textColor="@color/text_888"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:textColor="@color/text_167afe"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美元"
                    android:textColor="@color/text_888"
                    android:textSize="14dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_rate_layout_price_usd_five_hundred"
            android:layout_width="158dp"
            android:layout_height="66dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/flow_rate_selector_price"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500G"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售价"
                    android:textColor="@color/text_888"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="175"
                    android:textColor="@color/text_167afe"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美元"
                    android:textColor="@color/text_888"
                    android:textSize="14dp"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.GridLayout>
</LinearLayout>