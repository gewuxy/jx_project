<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/main_slide_layout"
        android:layout_width="300dp"
        android:layout_height="474dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="474dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_main_item"
            android:orientation="vertical">

            <lib.ys.network.image.NetworkImageView
                android:id="@+id/iv_main_cover"
                android:layout_width="300dp"
                android:layout_height="318dp"
                android:src="@drawable/login_ic_pwd"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="209dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="21dp"
                    android:text="脑卒中的神经康复讨论"
                    android:textColor="@color/text_343a4b"
                    android:layout_marginTop="11dp"
                    android:ellipsize="end"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/iv_live"
                    android:layout_width="18dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/main_ic_live"/>

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/main_ic_share"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="03'26"
                    android:textColor="@color/text_7b7a80"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_current_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_toRightOf="@+id/tv_total_time"
                    android:text="5"
                    android:textColor="@color/text_167afe"
                    android:textSize="16dp"/>

                <View
                    android:id="@+id/slide_divider"
                    android:layout_width="1dp"
                    android:layout_height="9dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tv_current_page"
                    android:background="@color/color_db"/>

                <TextView
                    android:id="@+id/tv_total_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_current_page"
                    android:text="21"
                    android:textColor="@color/text_7b7a80"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="6dp"
                    android:text="直播中"
                    android:textColor="@color/text_167afe"
                    android:textSize="10dp"/>

            </RelativeLayout>

            <View
                android:layout_width="328dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/short_divider"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>