<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <lib.ys.network.image.NetworkImageView
        android:id="@+id/photo_iv_pic"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_margin="1dp"
        app:niv_foreground="@drawable/item_foreground_selector"/>

    <ImageView
        android:id="@+id/photo_iv_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/photo_selector"/>

    <View
        android:id="@+id/photo_iv_cover"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_margin="1dp"
        android:background="#b3ffffff"
        android:visibility="gone"/>

</RelativeLayout>