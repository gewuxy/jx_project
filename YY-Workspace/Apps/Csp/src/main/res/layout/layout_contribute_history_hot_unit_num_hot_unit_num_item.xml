<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contribute_history_hot_unit_num_hot_unit_num_layout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:background="@drawable/item_selector"
        android:orientation="horizontal">
        
        <lib.ys.network.image.NetworkImageView
            android:id="@+id/contribute_history_hot_unit_num_hot_unit_num_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/contribute_history_hot_unit_num_hot_unit_num_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:text="测试单位号"
            android:textSize="16dp"
            android:textColor="@color/text_333"/>

    </LinearLayout>

</LinearLayout>