<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:columnCount="2">

        <LinearLayout
            android:id="@+id/flow_rate_layout_price_flow_1"
            android:layout_width="158dp"
            android:layout_height="66dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/flow_rate_selector_price"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5G"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <TextView
                android:id="@+id/flow_rate_price_rmb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售价10元"
                android:textColor="@color/text_888"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_rate_layout_price_flow_2"
            android:layout_width="158dp"
            android:layout_height="66dp"
            android:background="@drawable/flow_rate_selector_price"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25G"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <TextView
                android:id="@+id/flow_rate_price_rmb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售价50元"
                android:textColor="@color/text_888"
                android:textSize="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_rate_layout_price_flow_3"
            android:layout_width="158dp"
            android:layout_height="66dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/flow_rate_selector_price"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100G"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <TextView
                android:id="@+id/flow_rate_price_rmb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售价200元"
                android:textColor="@color/text_888"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_rate_layout_price_flow_4"
            android:layout_width="158dp"
            android:layout_height="66dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/flow_rate_selector_price"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500G"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <TextView
                android:id="@+id/flow_rate_price_rmb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售价1000元"
                android:textColor="@color/text_888"
                android:textSize="14dp"/>
        </LinearLayout>
    </android.support.v7.widget.GridLayout>
</LinearLayout>