<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_nav_bar_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_star_content"/>

    <!-- 讲本时长 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="307dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_all_time"
            android:textColor="@color/text_787c86"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/star_tv_finish_all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="00'00''"
            android:textColor="@color/text_c6c5cb"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- 预览 添加主题 添加音乐 -->
    <LinearLayout
        android:id="@+id/star_layout_preview_theme_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/star_tv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/star_ic_preview"
            android:gravity="center"
            android:text="@string/preview"
            android:textColor="@color/text_787c86"
            android:textSize="11dp"/>

        <RelativeLayout
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">

            <TextView
                android:id="@+id/star_tv_add_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/star_ic_theme"
                android:gravity="center"
                android:text="@string/add_theme"
                android:textColor="@color/text_787c86"
                android:textSize="11dp"/>

            <ImageView
                android:id="@+id/star_iv_add_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/star_ic_green_select"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">

            <TextView
                android:id="@+id/star_tv_add_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/star_ic_music"
                android:gravity="center"
                android:text="@string/add_music"
                android:textColor="@color/text_787c86"
                android:textSize="11dp"/>

            <ImageView
                android:id="@+id/star_iv_add_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/star_ic_green_select"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

    <!--已经选择的背景音乐-->
    <LinearLayout
        android:id="@+id/star_layout_bg_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="44dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/star_ic_bg_music"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/star_tv_choose_bg_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑色幽默  33'20''"
            android:textColor="@color/text_787c86"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/star_iv_close_bg_music_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:src="@drawable/star_ic_green_close"/>

    </LinearLayout>

</RelativeLayout>