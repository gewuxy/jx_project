<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/layout_base_record_nav_bar_tv_current_page"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/layout_base_record_nav_bar_divider"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:text="1"
        android:textSize="18dp"
        android:textColor="@color/text_ace400"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/layout_base_record_nav_bar_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="/"
        android:textSize="14dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/layout_base_record_nav_bar_tv_total_page"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layout_base_record_nav_bar_divider"
        android:layout_marginLeft="3dp"
        android:layout_centerVertical="true"
        android:gravity="left"
        android:text="1"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</RelativeLayout>