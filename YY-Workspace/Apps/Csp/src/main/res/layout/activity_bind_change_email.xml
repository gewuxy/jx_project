<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_default_authentication_link_send"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="67dp"
        android:text="@string/setting_certification_text"
        android:textColor="@color/text_888"
        android:textSize="@dimen/share"/>

    <TextView
        style="@style/tv.common"
        android:id="@+id/set_tv_change_email"
        android:layout_marginTop="30dp"
        android:text="@string/setting_change_email_address"/>

</LinearLayout>