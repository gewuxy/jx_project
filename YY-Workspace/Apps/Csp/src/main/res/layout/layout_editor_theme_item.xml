<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/editor_theme_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="79dp"
            android:layout_height="114dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/editor_theme_selector"
            android:gravity="center">

            <lib.ys.network.image.NetworkImageView
                android:id="@+id/editor_theme_iv_item"
                android:layout_width="75dp"
                android:layout_height="110dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="66dp"
            android:src="@drawable/editor_theme_iv_selector"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/editor_preview_tv_item"
        android:layout_width="56dp"
        android:layout_height="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/common_btn_selector_black"
        android:gravity="center"
        android:text="@string/preview"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:visibility="invisible"/>
</LinearLayout>