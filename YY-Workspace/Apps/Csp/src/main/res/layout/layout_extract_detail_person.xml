<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/extract_detail_person_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="经验分产品运营绘本故事欢时经验分产品运营绘本故事欢时"
            android:textColor="@color/text_404356"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/extract_detail_person_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:includeFontPadding="false"
            android:text="220"
            android:textColor="@color/text_404356"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="@string/extract_detail_currency"
            android:textColor="@color/text_404356"
            android:textSize="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/extract_detail_individual_income_tax"
            android:textColor="@color/text_9699a2"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/extract_detail_person_tv_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:text="-20"
            android:textColor="@color/text_404356"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/extract_detail_currency"
            android:textColor="@color/text_404356"
            android:textSize="7dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/text_f2f2f4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/extract_detail_person_info"
        android:textColor="@color/text_9699a2"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extract_detail_person_name"
            android:textColor="@color/text_404356"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/extract_detail_person_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:gravity="end"
            android:singleLine="true"
            android:text="名字"
            android:textColor="@color/text_9699a2"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extract_detail_alipay"
            android:textColor="@color/text_404356"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/extract_detail_person_tv_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:gravity="end"
            android:singleLine="true"
            android:text="tixianxiangqi@medcn.cn"
            android:textColor="@color/text_9699a2"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>