<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_default_change_pwd_bind_email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="77dp"
        android:text="@string/setting_bind_text"
        android:textColor="@color/text_404356"
        android:textSize="@dimen/margin"/>

    <TextView
        style="@style/tv.common"
        android:id="@+id/set_tv_bind_email"
        android:layout_marginTop="30dp"
        android:text="@string/setting_bind_email"/>

</LinearLayout>