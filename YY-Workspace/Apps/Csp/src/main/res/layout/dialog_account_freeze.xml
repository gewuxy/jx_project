<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <lib.ys.view.CornerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        app:corner_radius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dialog_layout_hint"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_main_tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:text="无法登录"
                    android:textColor="@color/text_333"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="12dp"
                    android:autoLink="email"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:text="抱歉,您的账号存在异常,已被冻结,请发邮件到 service@cspmeeting.com 进行处理"
                    android:textColor="@color/text_888"
                    android:textSize="15dp"/>

            </LinearLayout>

            <View style="@style/divider"/>

            <LinearLayout
                android:id="@+id/dialog_layout_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"/>

        </LinearLayout>

    </lib.ys.view.CornerView>

</LinearLayout>