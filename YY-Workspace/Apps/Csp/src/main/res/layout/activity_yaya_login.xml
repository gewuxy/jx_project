<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="138dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/login_ic_yaya"/>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="356dp"
        android:layout_gravity="center"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_yaya_authorize_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="@string/visit_csp"
            android:textColor="@color/text_af"
            android:textSize="13dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp">

            <jx.csp.view.AutoCompleteEditText
                android:id="@+id/yaya_username"
                android:layout_width="268dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_yaya_authorize_login_edt"
                android:hint="@string/username"
                android:paddingLeft="20dp"
                android:textColorHint="@color/text_b3"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/yaya_username_clean"
                style="@style/iv.form.clean"
                android:layout_centerVertical="true"
                android:layout_marginLeft="229dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/yaya_pwd"
                android:layout_width="268dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_yaya_authorize_login_edt"
                android:hint="@string/pwd"
                android:paddingLeft="20dp"
                android:textColorHint="@color/text_b3"
                android:textSize="16dp"/>

            <CheckBox
                android:id="@+id/yaya_visible_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="229dp"
                android:button="@drawable/login_checkbox_visible_selector"/>

            <ImageView
                android:id="@+id/yaya_pwd_clean"
                style="@style/iv.form.clean"
                android:layout_alignRight="@+id/yaya_visible_pwd"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/yaya_login"
            android:layout_width="268dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:background="@drawable/yaya_login_btn_selector_blue"
            android:gravity="center"
            android:text="@string/authorization_login"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>