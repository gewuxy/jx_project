<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/editor_theme_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="114dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/theme_selector"
            android:gravity="center">

            <lib.ys.network.image.NetworkImageView
                android:id="@+id/editor_theme_iv_item"
                android:layout_width="74dp"
                android:layout_height="110dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/editor_theme_iv_selector"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/editor_preview_tv_item"
        android:layout_width="56dp"
        android:layout_height="20dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/common_btn_selector_black"
        android:gravity="center"
        android:text="@string/preview"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:visibility="invisible"
        android:layout_marginBottom="12dp"/>

</LinearLayout>