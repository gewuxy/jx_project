<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_vip_manage_card"
        style="@style/iv.vip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="@string/vip_manage_meeting_num"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <TextView
                android:id="@+id/tv_vip_meet_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/divider"
                android:text="1"
                android:textColor="@color/text_167afe"
                android:textSize="@dimen/margin"/>

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/tv_vip_meet_limit"
                android:background="@color/color_db"/>

            <TextView
                android:id="@+id/tv_vip_meet_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin"
                android:textColor="@color/text_af"
                android:text="3"
                android:textSize="@dimen/margin"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@color/color_db"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_333"
                android:layout_marginLeft="@dimen/margin"
                android:text="@string/vip_manage_validity"
                android:textSize="@dimen/margin"/>

            <TextView
                android:id="@+id/tv_vip_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/vip_manage_time"
                android:textColor="@color/text_af"
                android:textSize="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@color/color_db"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vip_manage_permission"
            android:textColor="@color/text_333"
            android:textSize="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="18dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_vip_permission"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>