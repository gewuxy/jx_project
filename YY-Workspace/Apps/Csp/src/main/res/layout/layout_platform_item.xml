<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/platform_item_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/platform_item_iv_select"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/platform_selector"
            android:layout_marginLeft="@dimen/margin"/>

        <lib.ys.network.image.NetworkImageView
            android:id="@+id/platform_item_iv"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/platform_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州市人民医院骨科研讨会"
                android:textColor="@color/text_333"
                android:textSize="@dimen/margin"/>

            <TextView
                android:id="@+id/platform_item_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="掌握医药卫生知识，从事疾病预防"
                android:textColor="@color/text_888"
                android:textSize="14dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>