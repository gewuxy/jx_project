<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/choice_photo_divider_top"
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <lib.ys.view.CornerView
            android:id="@+id/choice_photo_layout"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_below="@id/choice_photo_divider_top"
            android:layout_marginRight="@dimen/margin"
            android:orientation="horizontal"
            app:corner_radius="10dp">

            <View
                android:id="@+id/choice_photo_layout_add_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_selector"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:background="@drawable/bg_main_empty"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:src="@drawable/choice_photo_ic_camera"/>

        </lib.ys.view.CornerView>

        <View
            android:id="@+id/choice_photo_divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/choice_photo_layout"/>

    </RelativeLayout>
</LinearLayout>