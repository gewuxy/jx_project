<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <!--不能使用margin top属性, 会导致CornerView底部圆角无法绘制-->
    <View
        style="@style/divider"
        android:layout_height="16dp"
        android:background="@color/transparent"/>

    <lib.ys.view.CornerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_meet_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:corner_foreground="@drawable/item_foreground_selector"
        app:corner_radius="6dp">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:background="@color/white">

            <lib.ys.network.image.NetworkImageView
                android:id="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="110dp"/>

            <ImageView
                android:id="@+id/main_meet_iv_live"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:src="@drawable/main_ic_live"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="脑卒中的神经康复客服看看"
                android:textColor="@color/text_333"
                android:textSize="14dp"/>

            <RelativeLayout
                android:id="@+id/layout_time"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_below="@id/tv_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/main_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="00'00''"
                    android:textStyle="bold"
                    android:textColor="@color/text_7a8b9f"
                    android:textSize="12dp"/>

                <ImageView
                    android:id="@+id/main_meet_iv_share"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/nav_bar_selector"
                    android:padding="3dp"
                    android:src="@drawable/main_ic_share"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/frag_main_meet_vp_tv_share_playback"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/main_ic_share_meeting_playback_bg"
                android:gravity="center"
                android:paddingBottom="17dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="11dp"
                android:singleLine="true"
                android:text="@string/share_meeting_playback"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="gone"/>

        </RelativeLayout>

    </lib.ys.view.CornerView>

</LinearLayout>