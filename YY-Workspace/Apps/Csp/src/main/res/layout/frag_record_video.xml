<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="294dp"
        android:layout_height="226dp"
        android:layout_centerInParent="true">

        <com.pili.pldroid.player.widget.PLVideoTextureView
            android:id="@+id/frag_record_video_texture_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/frag_record_video_iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_default_record"/>

        <ImageView
            android:id="@+id/frag_record_video_iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/record_ic_video_start"/>

    </RelativeLayout>

</RelativeLayout>