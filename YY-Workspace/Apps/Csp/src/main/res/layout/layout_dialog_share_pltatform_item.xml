<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:id="@+id/dialog_layout_share"
        android:background="@drawable/nav_bar_selector"
        style="@style/v.share">

        <ImageView
            android:id="@+id/dialog_share_iv_wechat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/share_ic_wechat"/>

        <TextView
            android:id="@+id/dialog_share_tv_wechat"
            style="@style/tv.share"
            android:text="@string/wechat"/>

    </LinearLayout>

</LinearLayout>