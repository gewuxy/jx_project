<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_share"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <GridView
            android:id="@+id/share_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/transparent"
            android:numColumns="4"
            android:verticalSpacing="31dp"/>

    </LinearLayout>

    <View
        style="@style/divider"
        android:background="@color/color_db"/>

    <LinearLayout
        android:id="@+id/layout_share2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <GridView
            android:id="@+id/share_gridview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/transparent"
            android:numColumns="4"
            android:verticalSpacing="31dp"/>

    </LinearLayout>

    <View
        style="@style/divider"
        android:background="@color/color_db"/>

    <TextView
        android:id="@+id/dialog_share_tv_cancel"
        style="@style/tv.dialog.share"
        android:text="@string/cancel"/>

</LinearLayout>