<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <lib.ys.view.pager.ViewPagerEx
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="474dp"
        android:layout_marginTop="35dp"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"/>

    <RelativeLayout
        android:id="@+id/layout_main_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/live_reminder"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/pink_diaphaneity_sixty"
            android:visibility="gone">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_default_i"/>

            <TextView
                android:id="@+id/tv_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:text="@string/living"
                android:textColor="@color/white"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/click_continue"
                android:layout_width="44dp"
                android:layout_height="18dp"
                android:layout_marginLeft="141dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_main_slide_btn"
                android:gravity="center"
                android:text="@string/click_continue"
                android:textColor="@color/white"
                android:textSize="7dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_slide_data_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/frag_current_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="1"
                android:textColor="@color/text_167afe"
                android:textSize="14dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/frag_current_page"
                android:background="@color/color_db"/>

            <TextView
                android:id="@+id/frag_total_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="16dp"
                android:text="9"
                android:textColor="@color/text_7b7a80"
                android:textSize="14dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>