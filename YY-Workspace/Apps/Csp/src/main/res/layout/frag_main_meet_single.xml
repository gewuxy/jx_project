<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <lib.ys.view.CornerView
        android:id="@+id/main_meet_single_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:corner_foreground="@drawable/item_foreground_selector"
        app:corner_radius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="474dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="310dp">

                <lib.ys.network.image.NetworkImageView
                    android:id="@+id/iv_main_cover"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"/>

                <ImageView
                    android:id="@+id/main_meet_single_iv_live"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="7dp"
                    android:padding="5dp"
                    android:src="@drawable/main_ic_live"/>

                <TextView
                    android:id="@+id/frag_main_meet_single_tv_share_playback"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/main_ic_share_meeting_playback_bg"
                    android:gravity="center"
                    android:paddingBottom="17dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="11dp"
                    android:text="@string/share_meeting_playback"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="脑卒中的神经康复讨论"
                android:textColor="@color/text_333"
                android:textSize="18dp"/>

            <RelativeLayout
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:text="03'26"
                    android:textColor="@color/text_7a8b9f"
                    android:textSize="12dp"/>

                <ImageView
                    android:id="@+id/main_meet_single_iv_share"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/nav_bar_selector"
                    android:padding="3dp"
                    android:src="@drawable/main_ic_share"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/short_divider"/>

        </LinearLayout>

    </lib.ys.view.CornerView>

</FrameLayout>