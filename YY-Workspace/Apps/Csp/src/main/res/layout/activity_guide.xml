<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_viewpager"/>

    <TextView
        android:id="@+id/activity_guide_tv"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/guide_btn_selector_blue"
        android:gravity="center"
        android:text="test guide"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:id="@+id/activity_guide_layout_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/activity_guide_iv_blue"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/guide_circle_blue"/>

    </RelativeLayout>

</RelativeLayout>