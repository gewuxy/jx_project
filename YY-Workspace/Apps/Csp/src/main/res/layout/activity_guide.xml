<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_viewpager"/>

    <TextView
        android:id="@+id/activity_guide_tv"
        android:layout_width="127dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/guide_btn_selector_blue"
        android:gravity="center"
        android:text="@string/start_experience"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:id="@+id/activity_guide_layout_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/activity_guide_iv_blue"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@drawable/guide_circle_black"/>

    </RelativeLayout>

</RelativeLayout>