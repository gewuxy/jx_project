<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <lib.ys.network.image.NetworkImageView
            android:id="@+id/detail_head"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州市人民医院骨科研讨会"
                android:textColor="@color/text_333"
                android:textSize="16dp"/>

            <RelativeLayout
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/play_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="录播"
                    android:textColor="@color/text_167afe"
                    android:textSize="14dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="33dp"
                    android:layout_toRightOf="@+id/play_state"
                    android:background="@color/color_db"/>

                <TextView
                    android:id="@+id/play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_toRightOf="@+id/play_state"
                    android:text="75'15"
                    android:textColor="@color/text_b3"
                    android:textSize="14dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="33dp"
                    android:layout_toRightOf="@+id/play_time"
                    android:background="@color/color_db"/>

                <TextView
                    android:id="@+id/play_paper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_toRightOf="@+id/play_time"
                    android:text="160页"
                    android:textColor="@color/text_b3"
                    android:textSize="14dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/divider"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"/>
</LinearLayout>