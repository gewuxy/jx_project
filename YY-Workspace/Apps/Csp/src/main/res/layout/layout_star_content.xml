<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 会将制作 -->
    <RelativeLayout
        android:id="@+id/star_layout_meet_default"
        android:layout_width="152dp"
        android:layout_height="117dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/start_default_ic_data_matrix"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"
            android:text="@string/spread_your_insights"
            android:textColor="@color/text_787c86"
            android:textSize="14dp"/>
    </RelativeLayout>

    <!-- 二维码 -->
    <LinearLayout
        android:id="@+id/star_layout_data_matrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:background="@drawable/bg_iv_data_matrix"
            android:gravity="center"
            android:orientation="vertical">

            <lib.ys.network.image.NetworkImageView
                android:id="@+id/star_iv_data_matrix"
                android:layout_width="128dp"
                android:layout_height="128dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/data_matrix_grade"
            android:textColor="@color/text_9699a2"
            android:textSize="12dp"/>

    </LinearLayout>

</RelativeLayout>