<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jx.csp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="jx.csp.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${app_name}"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_SwipeBack">

        <activity
            android:name="jx.csp.ui.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="jx.csp.ui.activity.TestActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"/>

        <activity
            android:name="jx.csp.ui.activity.AdvActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="jx.csp.ui.activity.liveroom.LiveRoomActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.activity.record.CommonRecordActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activity.record.LiveRecordActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="jx.csp.ui.activity.TestRecoderActivity"
            android:screenOrientation="portrait"/>


        <activity
            android:name="jx.csp.ui.activity.CommonWebViewActivity"
            android:screenOrientation="portrait"/>

        <!--登录-->
        <activity
            android:name="jx.csp.ui.activity.login.ThirdPartyLoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.login.EmailLoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.login.CaptchaLoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="jx.csp.ui.activity.login.ForgetPwdActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.login.RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="jx.csp.ui.activity.login.RegisterSkipActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.login.ForgetPwdSkipActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.login.CaptchaLoginNicknameActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.login.YaYaAuthorizeLoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.ShareTestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.LoginVideoActivtity"
            android:screenOrientation="portrait"/>

        <!--首页-->
        <activity
            android:name="jx.csp.ui.activity.main.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.main.ScanActivity"
            android:screenOrientation="portrait"/>

        <!--个人中心-->
        <activity
            android:name="jx.csp.ui.activity.me.MeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.SettingsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.AccountManageActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.ContributePlatformActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.ContributeHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.ContributeHistoryDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.FlowRateManageActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.HelpAndFeedbackActivity"
            android:screenOrientation="portrait"/>

        <!-- 设置 -->
        <activity
            android:name="jx.csp.ui.activity.me.set.ChangePwdActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.set.BindEmailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.set.BindEmailJumpActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.set.BindChangeEmailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.set.BindPhoneActivity"
            android:screenOrientation="portrait"/>

        <!-- 我的信息 -->
        <activity
            android:name="jx.csp.ui.activity.me.profile.ProfileActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jx.csp.ui.activity.me.profile.IntroActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="jx.csp.ui.activity.me.profile.NickNameActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="jx.csp.ui.activity.me.profile.ClipImageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>


        <!-- service -->
        <service android:name=".serv.CommonServ"/>

        <!--极光推送-->
        <receiver
            android:name=".receiver.JPushReceiver"
            android:enabled="true">
            <intent-filter>
                <!--Required 用户注册SDK的intent-->
                <action android:name="cn.jpush.android.intent.REGISTRATION"/>
                <!--Required 用户接收SDK消息的intent-->
                <action android:name="cn.jpush.android.intent.MESSAGE_RECEIVED"/>

                <!--Required 用户接收SDK通知栏信息的intent-->
                <!--<action android:name="cn.jpush.android.intent.NOTIFICATION_RECEIVED"/>-->

                <!--Required 用户打开自定义通知栏的intent-->
                <!--<action android:name="cn.jpush.android.intent.NOTIFICATION_OPENED"/>-->

                <!--接收网络变化 连接/断开 since 1.6.3 -->
                <action android:name="cn.jpush.android.intent.CONNECTION"/>
                <category android:name="${applicationId}"/>
            </intent-filter>
        </receiver>

        <meta-data
            android:name="JPUSH_APPKEY"
            android:value="61f4b84e5c33850ca329d67d"/>
        <meta-data
            android:name="JX_LANGUAGE"
            android:value="${language}" />

    </application>
</manifest>
